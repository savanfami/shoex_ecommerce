            <script>
                let screentwidth = screen.width
                let slider = 4;
                if (screentwidth < 1400) {
                    slider = 4
                }
                if (screentwidth < 1200) {
                    slider = 3
                }
                if (screentwidth < 992) {
                    slider = 2
                }
                if (screentwidth < 768) {
                    slider = 1
                }
                window.addEventListener("resize", () => {
                    let width = document.body.clientWidth
                    if (width < 1400) {
                        slider = 4
                    }
                    if (width < 1200) {
                        slider = 3
                    }
                    if (width < 992) {
                        slider = 2
                    }
                    if (width < 768) {
                        slider = 1
                    }
                    var swiper = new Swiper(".mySwiper", {
                        slidesPerView: slider,
                        spaceBetween: 30,
                        grabCursor: true,
                        pagination: {
                            el: ".swiper-pagination",
                            clickable: true,
                        },
                    });
                });
                var swiper = new Swiper(".mySwiper", {
                    slidesPerView: slider,
                    spaceBetween: 30,
                    grabCursor: true,
                    pagination: {
                        el: ".swiper-pagination",
                        clickable: true,
                    },
                });


                function goDetail(link) {
                    window.location.href = link
                }
            </script>


