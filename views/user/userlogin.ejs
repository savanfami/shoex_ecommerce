                   <form action="/user/login" method="post" name="login">
                           <div class="form-group">
                              <label for="exampleInputEmail1">Email address</label>
                              <input type="email" name="email" value="savanfami1239@gmail.com" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" required>
                           </div>
                           <div class="form-group">
                              <label for="exampleInputEmail1">Password</label>
                              <input type="password" name="password" id="password" value="Sava@1239" class="form-control" aria-describedby="emailHelp" placeholder="Enter Password" required="">
