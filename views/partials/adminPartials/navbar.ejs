                        <span class="nav_name">Dashboard</span>
                    </a>
                    <a href="/admin/manageProduct" class="nav_link">
                        <i class='fa-solid fa-box nav_icon'></i>
                        <span class="nav_name">Products</span>
                    </a>
                    <!-- Add other sidebar links here -->
